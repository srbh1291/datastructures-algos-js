
arr=[2,2,3,4,4,4,7,7,12];
newarr = [];

uniqueArr(arr);

function uniqueArr(arr){
    var i = 0;
    var j = 1;
    newarr.push(arr[0])
    while(i<arr.length && j<arr.length){
        
        if((arr[i]!=arr[j]) && (j-i>1)){
          i=j-1;
        } else if((arr[i]!=arr[j]) && (j-i==1)){
            newarr.push(arr[j]);
            i++;
            j++;
        }else if(arr[i]==arr[j]){
          j++
        }
            
    }
  
    console.log(newarr);

}
